.test .devices_summary {
  margin-top: 30px;
  padding: 10px;
  font-size: 16px;
}
.test .device_list {
  height: 300px;
  margin: 50px 5px;
  margin-top: 0;
  border: 1px solid #eee;
  border-radius: 5px;
  width: auto;
}
.test .device_item {
  border-bottom: 1px solid #eee;
  padding: 10px;
  color: #666;
}
.test .device_item_hover {
  background-color: rgba(0,0,0,0.1);
}
.test .connected_info {
  position: fixed;
  bottom: 0;
  width: 100%;
  background-color: #f0f0f0;
  padding: 10px;
  padding-bottom: 20px;
  margin-bottom: env(safe-area-inset-bottom);
  font-size: 14px;
  min-height: 100px;
  box-shadow: 0 0 3px 0;
}
.test .connected_info .operation {
  position: absolute;
  display: inline-block;
  right: 30px;
}

