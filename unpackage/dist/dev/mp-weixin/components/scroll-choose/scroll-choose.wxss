.scroll-choose-all {
  width: 750rpx;
  height: 70px;
  background: #f8f8f8;
  margin: 10px 0;
  border-bottom: 1px solid #ccc;
  border-top: 1px solid #ccc;
  position: relative;
}
.middleLine {
  position: absolute;
  width: 4px;
  height: 40px;
  background: #83DC42;
  left: 375rpx;
  margin-left: -2px;
  z-index: 1;
}
.scroll-choose {
  width: 750rpx;
  height: 70px;
}
.scroll-choose .scroll-con {
    height: 70px;
    overflow: hidden;
}
.scroll-choose .scroll-con .topLine {
      height: 30px;
      padding: 0 372rpx;
}
.scroll-choose .scroll-con .bottomNum {
      height: 30px;
      padding: 0 0 0 372rpx;
      width: 100%;
}
.scroll-choose .scroll-con .bottomNum .allNum {
        display: inline-block;
        position: relative;
        text-align: center;
}
.scroll-choose .scroll-con .allLine {
      display: inline-block;
      width: 2px;
      background: #999;
      position: relative;
}
.scroll-choose .scroll-con .allLine:last-child {
      margin-right: 0px !important;
}
.scroll-choose .scroll-con .LLine {
      height: 30px;
}
.scroll-choose .scroll-con .MLine {
      height: 20px;
      top: -10px;
}
.scroll-choose .scroll-con .SLine {
      height: 15px;
      top: -15px;
}

