.news-card {
  position: relative;
}
.news-card .news-items {
    position: relative;
    margin: 20rpx 0 40rpx;
    height: 144rpx;
    width: 100%;
}
.news-card .news-items .news-images {
      position: absolute;
      left: 0;
      top: 0;
      width: 144rpx;
      height: 144rpx;
      border-radius: 20rpx;
      background-color: #ccc;
}
.news-card .news-items .news-title {
      position: absolute;
      left: 158rpx;
      top: 0;
      width: 540rpx;
      height: 70rpx;
}
.news-card .news-items .news-title ._p {
        font-size: 30rpx;
        font-weight: 700;
        line-height: 36rpx;
        color: #444;
}
.news-card .news-items .news-info {
      position: absolute;
      left: 158rpx;
      bottom: 32rpx;
      width: 546rpx;
      height: 24rpx;
}
.news-card .news-items .news-info ._p {
        font-size: 24rpx;
        line-height: 1;
        color: #666;
}
.news-card .news-items .news-items-bt-line {
      content: "";
      position: absolute;
      bottom: -20rpx;
      left: 0;
      width: 100%;
      height: 2rpx;
      background-color: #eee;
}
.news-card .news-items:last-of-type .news-items-bt-line {
    display: none;
}

